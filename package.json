{
  "name": "blackninjas-backend",
  "version": "1.0.0",
  "description": "A platform to make company global travel and accommodation easy and convenient for the strong workforce of savvy members of staff, by leveraging the modern web.",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "src/database/*",
      "src/tests",
      "src/helpers/logger.helper.js"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "NODE_ENV=production babel-node ./src/index.js",
    "test": "NODE_ENV=testing npm run db-undo-migration && NODE_ENV=testing npm run db-migrate && NODE_ENV=testing nyc --reporter=html --reporter=text mocha --require @babel/register src/tests/*.js  --require @babel/polyfill --require @babel/register --timeout 10000 --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "db-migrate": "npx sequelize db:migrate",
    "db-undo-migration": "npx sequelize db:migrate:undo:all",
    "db-seed-test": "NODE_ENV=testing npx sequelize-cli db:seed:undo:all && NODE_ENV=testing sequelize db:seed:all",
    "db-seed-dev": "npx sequelize-cli db:seed:undo:all && npx sequelize db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/blackninjas-backend.git"
  },
  "author": "blackninjas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela/blackninjas-backend/issues"
  },
  "homepage": "https://github.com/andela/blackninjas-backend#readme",
  "dependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.4",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "log4js": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.1",
    "path": "^0.12.7",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "mocha": "^6.2.2",
    "coveralls": "^3.0.9",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1"
  }
}
