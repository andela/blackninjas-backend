{
  "name": "blackninjas-backend",
  "version": "1.0.0",
  "description": "A platform to make company global travel and accommodation easy and convenient for the strong workforce of savvy members of staff, by leveraging the modern web.",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "src/database/*",
      "src/tests",
      "src/helpers/logger.helper.js",
      "src/helpers/socket.helper.js",
      "src/helpers/verify.token.helper.js",
      "src/middlewares/user.middleware.js",
      "src/helpers/send.email.helper",
      "src/middlewares/auth.middleware.js ",
      "src/services/user.service.js ",
      "src/services/user.service.js ",
      "src/services/notification.service.js ",
      "src/middlewares/admin.verify.middleware.js",
      "src/middlewares/auth.middleware.js ",
      "src/helpers/accomodation.helper.js"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "NODE_ENV=production babel-node ./src/index.js",
    "start:heroku": "NODE_ENV=production npm run db-migrate && babel-node ./src/index.js",
    "test": "NODE_ENV=testing npm run db-undo-migration && NODE_ENV=testing npm run db-migrate && NODE_ENV=testing nyc --reporter=html --reporter=text mocha --require @babel/register src/tests/*.js  --require @babel/polyfill --require @babel/register --timeout 100000000 --exit",
    "pretest-travis": "NODE_ENV=testing npm run db-undo-migration && NODE_ENV=testing  npm run db-migrate",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "db-migrate": "npx sequelize db:migrate",
    "db-undo-migration": "npx sequelize db:migrate:undo:all",
    "db-seed-test": "NODE_ENV=testing npx sequelize-cli db:seed:undo:all && NODE_ENV=testing sequelize db:seed:all",
    "db-seed-dev": "npx sequelize-cli db:seed:undo:all && npx sequelize db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/blackninjas-backend.git"
  },
  "author": "blackninjas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela/blackninjas-backend/issues"
  },
  "homepage": "https://github.com/andela/blackninjas-backend#readme",
  "dependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@babel/runtime": "^7.7.6",
    "@hapi/joi": "^17.0.0",
    "@hapi/joi-date": "^2.0.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.1.0",
    "moment": "^2.24.0",
    "node-mocks-http": "^1.8.1",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "path": "^0.12.7",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@passport-next/chai-passport-strategy": "^1.1.0",
    "coverage": "^0.4.1",
    "coveralls": "^3.0.9",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1"
  }
}
